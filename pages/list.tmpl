<!doctype html>
<html lang='en'>
	<head>
		<meta charset='utf-8'>
		<title>{{.Title}}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="color-scheme" content="light dark">
		<link rel='stylesheet' href='/static/main.css'>
		<link rel='shortcut icon' href='/static/favicon.png'>
	</head>
	<body>
		<header>
			<a href="/">
				<img alt="Hidden in the Fog" src="/static/fog.png">
			</a>
		</header>
		<main>
			{{range .Entries}}
			<div class="entry">
				<a href="{{.URL}}">{{.Name}}</a>
			</div>
			{{end}}
		</main>
	</body>
</html>
